    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

        <!-- Alerts -->
        {% for message in app.flashes('danger') %}
            <div class="card-body">
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h5><i class="icon fa fa-ban"></i> Dėmesio!</h5>
                    {{ message }}
                </div>
            </div>
        {% endfor %}
        {% for message in app.flashes('info') %}
            <div class="card-body">
                <div class="alert alert-info alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h5><i class="icon fa fa-info"></i> Svarbu!</h5>
                    {{ message }}
                </div>
            </div>
        {% endfor %}
        {% for message in app.flashes('warning') %}
            <div class="card-body">
                <div class="alert alert-warning alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h5><i class="icon fa fa-warning"></i> Įspėjimas!</h5>
                    {{ message }}
                </div>
            </div>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <div class="card-body">
                <div class="alert alert-success alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h5><i class="icon fa fa-check"></i> Atlikta!</h5>
                    {{ message }}
                </div>
            </div>
        {% endfor %}
        <!-- /.Alerts -->

        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 text-dark">{% block body_title %}{% endblock %}</h1>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        {% block body %}
        {% endblock %}
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
        <div class="p-3">
            <div style="text-align: center;">
                <img class="avatar" src="{{ asset('images/avatars/' ~ app.user.avatar) }}" alt="Avataras" />
                <h5>{{ app.user.firstName }} {{ app.user.lastName }}</h5>
            </div>
            <hr/>
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item"><a href="{{ path('security_logout') }}">
                                <i class="fa fa-sign-out"></i> Atsijungti</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </aside>
